<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/loginback"
    android:gravity="center"
    tools:context=".RegistActivity">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/login_icon_phone_n_hdpi"
            />

        <EditText
            android:inputType="phone"
            android:maxLines="1"
            android:id="@+id/regist_phone"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:textColorHint="#fff"
            />

    </LinearLayout>

    <View
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/login_icon_lock_n_hdpi"
                />

            <EditText
                android:inputType="textPassword"
                android:maxLines="1"
                android:id="@+id/regist_pwd"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint="登录密码"
                android:background="@null"
                android:layout_marginLeft="40dp"
                android:textColorHint="#fff"
                android:password="true"
                />

            <CheckBox
                android:id="@+id/login_see"
                android:layout_width="27dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/login_icon_eye_n_hdhpi"
                />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_marginTop="10dp"
        />

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:id="@+id/regist_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账户?立即登录"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/regist_regist"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="注册"
        android:layout_marginTop="100dp"
        />

</LinearLayout>